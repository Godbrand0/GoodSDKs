    "eslint": "^8.57.0",
    "tsup": "^8.2.4",
    "typescript": "5.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GoodDollar/GoodSDKs.git",
    "directory": "packages/bridging-sdk"
  },
  "keywords": [
    "gooddollar",
    "bridging",
    "cross-chain",
    "axelar",
    "layerzero",
    "blockchain",
    "sdk"
