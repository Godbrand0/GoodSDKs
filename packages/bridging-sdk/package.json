  },
  "dependencies": {
    "@gooddollar/bridge-contracts": "^1.0.0",
    "viem": "^2.28.0"
  },
  "peerDependencies": {
    "wagmi": "^2.14.8"
  },
  "devDependencies": {
    "@goodsdks/eslint-config": "workspace:*",
    "@goodsdks/typescript-config": "workspace:*",
